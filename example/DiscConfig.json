{
  "grid" : {
    "N"  : 500,
    "R0" : 0.1,
    "R1" : 1000.0,
    "spacing" : "natural"
  },

  "disc" : {
    "alpha"   : 1e-2,
    "mass"    : 0.01,
    "Rc"      : 100.0,
    "d2g"     : 0.01,
    "Schmidt" : 10.0,
    "amin"    : 1e-5
    },
  
  "chemistry" : {
    "on"   : false, 
    "type" : "Madhu", 
    "fix_mu" : false,
    "mu"     : 2.4,
    "crate" : 1e-17,
    "abundances" : "Eistrup2016.dat",
    "normalize" : true,
    "variable_grain_size" : true
  },

  "eos" : {
     "type" : "irradiated", 
     "opacity" : "Tazzari2016"
  },

  "star" : {
    "mass"   : 1.0,
    "radius" : 2.5,
    "T_eff"  : 4000.0
  },

  "transport" : {
    "gas"          : true, 
    "radial drift" : true,
    "diffusion"	   : true		   
  },

  "dust_transport" : {
    "van leer" : true,
    "settling" : false,
    "diffusion" : true
    },

  "photoevaporation" : {
    "on" : false,
    "method" : "const",
    "coeff"  : 1e-8
  },   


  "output" : {
    "directory" : "output",
    "base"	: "disc",
    "format"    : "hdf5",
    "first"     : 0.0,
    "last"      : 1e6,
    "interval"  : 1e4,
    "plot"      : true,
    "plot_times" : [0, 1e5, 5e5, 1e6]
  }
}
